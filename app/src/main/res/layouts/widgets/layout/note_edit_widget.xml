<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/widgetBaseLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- EditText !-->
        <TextView
            android:id="@+id/noteWidgetTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:gravity="top"/>
        <!-- Refresh Widget !-->
        <ImageButton
            android:id="@+id/refreshNoteWidgetButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/refresh_text" />
    </LinearLayout>

    <!-- List for Scrollable TextView !-->
    <ListView
        android:id="@+id/scrollableTextListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/transparent" />
</LinearLayout>